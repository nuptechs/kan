# NuP-Kan - Environment Variables

# Database (PostgreSQL via Neon)
DATABASE_URL=postgresql://user:password@host/database

# SendGrid (Email Service)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@nupkan.com

# Session
SESSION_SECRET=your-session-secret-key

# NuPIdentify Integration
IDENTITY_URL=https://nupidentify.replit.dev
IDENTITY_SYNC_TOKEN=your-admin-jwt-token-from-nupidentify

# Sync Configuration
AUTO_SYNC_PERMISSIONS=true
SYNC_INTERVAL_MINUTES=5

# Server
PORT=5000
NODE_ENV=development
